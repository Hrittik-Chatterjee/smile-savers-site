---
/**
 * TrustSignals - Statistics and trust indicators
 */

const stats = [
  { value: "35+", label: "Years of Experience", icon: "calendar" },
  { value: "10,000+", label: "Happy Patients", icon: "users" },
  { value: "ICOI", label: "Board Certified", icon: "award" },
  { value: "5.0", label: "Google Rating", icon: "star" },
];

const iconPaths: Record<string, string> = {
  calendar:
    "M8 2v4M16 2v4M3 10h18M5 4h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V6a2 2 0 012-2z",
  users:
    "M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2M9 11a4 4 0 100-8 4 4 0 000 8zM23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75",
  award: "M12 15l-2 5 2-1 2 1-2-5zM8 9a4 4 0 108 0 4 4 0 00-8 0z",
  star: "M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z",
};
---

<section class="trust-signals" aria-label="Trust indicators and statistics">
  <div class="trust-container">
    <div class="stats-grid">
      {
        stats.map((stat) => (
          <div class="stat-card">
            <div class="stat-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path d={iconPaths[stat.icon]} />
              </svg>
            </div>
            <div class="stat-content">
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label">{stat.label}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .trust-signals {
    padding: var(--spacing-block) 0;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-dark) 100%
    );
    color: var(--color-text-inverted);
  }

  .trust-container {
    max-width: var(--container-xl);
    margin-inline: auto;
    padding-inline: var(--spacing-element);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(8px);
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-md);
    flex-shrink: 0;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    line-height: 1;
  }

  .stat-label {
    font-size: var(--font-size-sm);
    opacity: 0.9;
  }

  /* Mobile edge alignment - match header 0.5rem margin */
  @media (max-width: 639px) {
    .trust-container {
      padding-inline: 0.5rem;
    }
  }
</style>
