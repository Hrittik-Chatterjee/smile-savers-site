---
/**
 * Hero - Homepage hero section
 * Modern Bento Grid design with glassmorphism
 */

import Button from "@/components/ui/Button.astro";
import { siteConfig } from "@/config/site";
---

<section class="hero" aria-labelledby="hero-heading">
    <!-- Background effects -->
    <div class="hero-bg" aria-hidden="true">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
        <div class="grid-pattern"></div>
    </div>

    <div class="hero-container">
        <div class="bento-grid">
            <!-- Main Content Card -->
            <div class="bento-card bento-main">
                <div class="badge">
                    <span class="badge-dot"></span>
                    <span>Accepting New Patients</span>
                </div>

                <h1 id="hero-heading" class="headline">
                    Your smile deserves
                    <span class="headline-accent">exceptional care</span>
                </h1>

                <p class="subheadline">
                    Advanced dental technology meets compassionate care.
                    Serving Woodside, NY families since 1987.
                </p>

                <div class="cta-group">
                    <Button href="/appointments" variant="primary" size="lg">
                        Book Appointment
                    </Button>
                    <Button href={`tel:${siteConfig.phone.replace(/[^0-9+]/g, '')}`} variant="ghost" size="lg">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                        </svg>
                        {siteConfig.phone}
                    </Button>
                </div>
            </div>

            <!-- Experience Card -->
            <div class="bento-card bento-stat bento-experience">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        <path d="M9 12l2 2 4-4"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-number">35+</span>
                    <span class="stat-label">Years of Excellence</span>
                </div>
            </div>

            <!-- Patients Card -->
            <div class="bento-card bento-stat bento-patients">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-number">10K+</span>
                    <span class="stat-label">Happy Patients</span>
                </div>
            </div>

            <!-- Rating Card -->
            <div class="bento-card bento-stat bento-rating">
                <div class="stat-icon rating-stars">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-number">5.0</span>
                    <span class="stat-label">Google Rating</span>
                </div>
            </div>

            <!-- Services Preview Card -->
            <div class="bento-card bento-services">
                <span class="services-title">Our Services</span>
                <div class="services-list">
                    <span class="service-tag">Dental Implants</span>
                    <span class="service-tag">CEREC Crowns</span>
                    <span class="service-tag">Teeth Cleaning</span>
                    <span class="service-tag">Cosmetic Dentistry</span>
                </div>
                <a href="/services" class="services-link">
                    View All Services
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <!-- Trust Badge Card -->
            <div class="bento-card bento-trust">
                <div class="trust-badges">
                    <div class="trust-badge">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="8" r="7"/>
                            <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/>
                        </svg>
                        <span>Board Certified</span>
                    </div>
                    <div class="trust-badge">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                            <polyline points="22 4 12 14.01 9 11.01"/>
                        </svg>
                        <span>Verified Reviews</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 100svh;
        display: flex;
        align-items: center;
        padding: 1rem 0 4rem;
        overflow: hidden;
        background: var(--color-surface);
    }

    /* Background Effects */
    .hero-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.5;
    }

    .orb-1 {
        width: 600px;
        height: 600px;
        background: oklch(from var(--color-primary) l c h / 0.15);
        top: -200px;
        right: -100px;
        animation: float 20s ease-in-out infinite;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: oklch(from var(--color-secondary) l c h / 0.12);
        bottom: -100px;
        left: -100px;
        animation: float 25s ease-in-out infinite reverse;
    }

    .orb-3 {
        width: 300px;
        height: 300px;
        background: oklch(from var(--color-accent) l c h / 0.1);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation: pulse 15s ease-in-out infinite;
    }

    .grid-pattern {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(oklch(from var(--color-border) l c h / 0.3) 1px, transparent 1px),
            linear-gradient(90deg, oklch(from var(--color-border) l c h / 0.3) 1px, transparent 1px);
        background-size: 60px 60px;
        mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
        -webkit-mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        33% { transform: translate(30px, -30px) scale(1.05); }
        66% { transform: translate(-20px, 20px) scale(0.95); }
    }

    @keyframes pulse {
        0%, 100% { opacity: 0.1; transform: translate(-50%, -50%) scale(1); }
        50% { opacity: 0.15; transform: translate(-50%, -50%) scale(1.1); }
    }

    /* Container */
    .hero-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        position: relative;
        z-index: 1;
    }

    @media (min-width: 640px) {
        .hero-container {
            padding: 0 1.5rem;
        }
    }

    /* Bento Grid */
    .bento-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }

    @media (min-width: 640px) {
        .bento-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }
    }

    @media (min-width: 1024px) {
        .bento-grid {
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: auto auto auto;
            gap: 1rem;
        }
    }

    /* Bento Cards Base */
    .bento-card {
        background: oklch(from var(--color-surface-elevated) l c h / 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid oklch(from var(--color-border) l c h / 0.6);
        border-radius: var(--radius-xl);
        padding: 1.25rem;
        transition: box-shadow var(--transition-fast), border-color var(--transition-fast);
    }

    .bento-card:hover {
        box-shadow: var(--shadow-md);
        border-color: oklch(from var(--color-primary) l c h / 0.4);
    }

    /* Dark mode: reduce opacity for better glassmorphism effect */
    :global([data-theme="dark"]) .bento-card {
        background: oklch(from var(--color-surface-elevated) l c h / 0.6);
        border-color: oklch(from var(--color-border) l c h / 0.4);
    }

    @media (min-width: 640px) {
        .bento-card {
            padding: 1.5rem;
            border-radius: var(--radius-2xl);
        }
    }

    /* Main Content Card */
    .bento-main {
        grid-column: 1 / -1;
        padding: 2rem 1.5rem;
    }

    @media (min-width: 1024px) {
        .bento-main {
            grid-column: 1 / 3;
            grid-row: 1 / 3;
            padding: 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: oklch(from var(--color-primary) l c h / 0.1);
        border: 1px solid oklch(from var(--color-primary) l c h / 0.2);
        border-radius: 100px;
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--color-primary);
        margin-bottom: 1.5rem;
    }

    .badge-dot {
        width: 8px;
        height: 8px;
        background: var(--color-primary);
        border-radius: 50%;
        animation: blink 2s ease-in-out infinite;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.4; }
    }

    .headline {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 700;
        line-height: 1.1;
        color: var(--color-text);
        margin: 0 0 1rem 0;
        letter-spacing: -0.02em;
    }

    .headline-accent {
        display: block;
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 50%, var(--color-accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subheadline {
        font-size: 1.0625rem;
        line-height: 1.6;
        color: var(--color-text-muted);
        margin: 0 0 1.75rem 0;
        max-width: 480px;
    }

    @media (min-width: 768px) {
        .subheadline {
            font-size: 1.125rem;
        }
    }

    .cta-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    @media (min-width: 480px) {
        .cta-group {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 1rem;
        }
    }

    .cta-group :global(.btn) {
        width: 100%;
    }

    @media (min-width: 480px) {
        .cta-group :global(.btn) {
            width: auto;
        }
    }

    .cta-group :global(.btn-ghost) {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Stat Cards */
    .bento-stat {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    @media (min-width: 1024px) {
        .bento-stat {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, oklch(from var(--color-primary) l c h / 0.15), oklch(from var(--color-primary) l c h / 0.05));
        border-radius: var(--radius-lg);
        color: var(--color-primary);
        flex-shrink: 0;
    }

    .stat-icon svg {
        width: 24px;
        height: 24px;
    }

    .stat-icon.rating-stars {
        background: linear-gradient(135deg, oklch(from var(--color-accent) l c h / 0.2), oklch(from var(--color-accent) l c h / 0.05));
        color: var(--color-accent);
    }

    .stat-content {
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--color-text);
        line-height: 1;
        letter-spacing: -0.02em;
    }

    @media (min-width: 1024px) {
        .stat-number {
            font-size: 2rem;
        }
    }

    .stat-label {
        font-size: 0.8125rem;
        color: var(--color-text-muted);
        font-weight: 500;
    }

    /* Grid positioning for stat cards */
    @media (min-width: 1024px) {
        .bento-experience {
            grid-column: 3;
            grid-row: 1;
        }

        .bento-patients {
            grid-column: 4;
            grid-row: 1;
        }

        .bento-rating {
            grid-column: 3;
            grid-row: 2;
        }
    }

    /* Services Card */
    .bento-services {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    @media (min-width: 640px) {
        .bento-services {
            grid-column: span 2;
        }
    }

    @media (min-width: 1024px) {
        .bento-services {
            grid-column: 4;
            grid-row: 2 / 4;
        }
    }

    .services-title {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-text-muted);
    }

    .services-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .service-tag {
        padding: 0.375rem 0.75rem;
        background: oklch(from var(--color-surface-sunken) l c h / 0.8);
        border-radius: var(--radius-full);
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--color-text);
        transition: background-color var(--transition-fast), color var(--transition-fast);
    }

    .bento-services:hover .service-tag {
        background: oklch(from var(--color-primary) l c h / 0.1);
        color: var(--color-primary);
    }

    .services-link {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--color-primary);
        text-decoration: none;
        margin-top: auto;
        transition: gap var(--transition-fast);
    }

    .services-link:hover {
        gap: 0.625rem;
    }

    .services-link svg {
        transition: transform var(--transition-fast);
    }

    .services-link:hover svg {
        transform: translateX(2px);
    }

    /* Trust Card */
    .bento-trust {
        display: flex;
        align-items: center;
    }

    @media (min-width: 640px) {
        .bento-trust {
            grid-column: span 2;
        }
    }

    @media (min-width: 1024px) {
        .bento-trust {
            grid-column: 1 / 3;
            grid-row: 3;
        }
    }

    .trust-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        width: 100%;
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-muted);
        font-size: 0.875rem;
        font-weight: 500;
    }

    .trust-badge svg {
        width: 20px;
        height: 20px;
        color: var(--color-primary);
    }

    /* Mobile adjustments */
    @media (max-width: 639px) {
        .hero {
            padding: 1rem 0 3rem;
            min-height: auto;
        }

        .bento-stat {
            padding: 1rem 1.25rem;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
        }

        .stat-icon svg {
            width: 20px;
            height: 20px;
        }

        .stat-number {
            font-size: 1.5rem;
        }
    }
</style>
