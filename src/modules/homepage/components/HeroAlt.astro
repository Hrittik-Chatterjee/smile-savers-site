---
/**
 * HeroAlt - Alternative Homepage hero section
 * Full-screen background image design with integrated stats bar
 * Based on premium dental practice UI pattern
 */

import { siteConfig } from "@/config/site";

// Primary brand color for accent elements
const primaryColor = "var(--color-primary)";
---

<section class="hero-alt" aria-labelledby="hero-alt-heading">
  <!-- Background Image with Overlay -->
  <div class="hero-bg" aria-hidden="true">
    <img
      src="https://images.unsplash.com/photo-1629909613654-28e377c37b09?q=80&w=2068&auto=format&fit=crop"
      alt=""
      class="hero-bg-image"
      loading="eager"
      fetchpriority="high"
    />
    <!-- Dark Gradient Overlay -->
    <div class="hero-overlay"></div>
    <!-- Animated Glow Effect -->
    <div class="hero-glow"></div>
  </div>

  <!-- Main Hero Content -->
  <div class="hero-content">
    <!-- Tagline Pill Badge -->
    <div class="hero-badge">
      <span class="badge-dot"></span>
      <span>Accepting New Patients</span>
    </div>

    <!-- Headline -->
    <h1 id="hero-alt-heading" class="hero-headline">
      Top-Rated Dental Care in
      <span class="headline-accent">
        Woodside, NYC
        <svg class="headline-underline" viewBox="0 0 100 10" preserveAspectRatio="none" aria-hidden="true">
          <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="2" fill="none" />
        </svg>
      </span>
    </h1>

    <!-- Subheadline -->
    <p class="hero-subheadline">
      Experience pain-free dentistry with Dr. Bhagat.
      <span class="subheadline-emphasis">Emergency appointments available today.</span>
    </p>

    <!-- CTA Buttons -->
    <div class="hero-cta-group">
      <a href="/appointments" class="btn-hero-primary">
        <span>Book Appointment</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M5 12h14M12 5l7 7-7 7" />
        </svg>
      </a>
      <a href={`tel:${siteConfig.phone.replace(/[^0-9+]/g, '')}`} class="btn-hero-secondary">
        <svg class="phone-ring-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
        </svg>
        <span>{siteConfig.phone}</span>
      </a>
    </div>

    <!-- Trust Badges -->
    <div class="hero-badges">
      <div class="trust-badge-item">
        <div class="badge-icon badge-icon-google">
          <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
          </svg>
        </div>
        <div class="badge-text">
          <span class="badge-label">Google Rating</span>
          <span class="badge-value">5.0/5.0</span>
        </div>
      </div>
      <div class="trust-badge-item">
        <div class="badge-icon badge-icon-verified">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" aria-hidden="true">
            <polyline points="20 6 9 17 4 12" />
          </svg>
        </div>
        <div class="badge-text">
          <span class="badge-label">Zocdoc</span>
          <span class="badge-value">Top Rated</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Integrated Stats Bar -->
  <div class="stats-bar-wrapper">
    <div class="stats-bar">
      <!-- Module 1: Experience -->
      <div class="stat-module">
        <div class="stat-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>
        <div class="stat-text">
          <span class="stat-label">Serving Queens</span>
          <span class="stat-number">35+ <span class="stat-unit">Years</span></span>
          <span class="stat-detail">In the heart of Woodside</span>
        </div>
      </div>

      <!-- Module 2: Patients -->
      <div class="stat-module">
        <div class="stat-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
            <circle cx="9" cy="7" r="4" />
            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
          </svg>
        </div>
        <div class="stat-text">
          <span class="stat-label">Happy Patients</span>
          <span class="stat-number">10,000<span class="stat-accent">+</span></span>
          <span class="stat-detail">Family & Cosmetic Dentistry</span>
        </div>
      </div>

      <!-- Module 3: Availability -->
      <div class="stat-module">
        <div class="stat-icon-wrapper">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
            <line x1="16" y1="2" x2="16" y2="6" />
            <line x1="8" y1="2" x2="8" y2="6" />
            <line x1="3" y1="10" x2="21" y2="10" />
          </svg>
        </div>
        <div class="stat-text">
          <span class="stat-label">Availability</span>
          <span class="stat-number stat-number-accent">Same-Day</span>
          <span class="stat-detail">Emergency Appointments</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Phone Ring Animation */
  @keyframes phone-ring {
    0%, 100% {
      transform: rotate(0deg);
    }
    5% {
      transform: rotate(15deg);
    }
    10% {
      transform: rotate(-13deg);
    }
    15% {
      transform: rotate(14deg);
    }
    20% {
      transform: rotate(-12deg);
    }
    25% {
      transform: rotate(10deg);
    }
    30% {
      transform: rotate(0deg);
    }
  }

  .phone-ring-icon {
    animation: phone-ring 3s ease-in-out infinite;
    transform-origin: center center;
    animation-delay: 0.5s; /* Slight offset from header icon */
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .phone-ring-icon {
      animation: none;
    }
  }

  .hero-alt {
    position: relative;
    min-height: 100svh;
    min-height: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      oklch(15% 0.02 240 / 0.92),
      oklch(15% 0.02 240 / 0.75),
      oklch(15% 0.02 240 / 0.35)
    );
  }

  .hero-glow {
    position: absolute;
    top: 25%;
    left: 25%;
    width: 24rem;
    height: 24rem;
    background: var(--color-primary);
    border-radius: 50%;
    mix-blend-mode: overlay;
    filter: blur(128px);
    opacity: 0.2;
    animation: glow-pulse 4s ease-in-out infinite;
  }

  @keyframes glow-pulse {
    0%, 100% { opacity: 0.15; transform: scale(1); }
    50% { opacity: 0.25; transform: scale(1.1); }
  }

  /* Main Content */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 1rem 1rem 16rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding: 1rem 1.5rem 14rem;
    }
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background: oklch(100% 0 0 / 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid oklch(100% 0 0 / 0.2);
    color: white;
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    animation: fade-in-up 0.6s ease-out;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: oklch(72% 0.19 145); /* Green */
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Headline */
  .hero-headline {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-family: var(--font-family-heading);
    font-weight: 500;
    color: white;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    max-width: 56rem;
    text-shadow: 0 4px 24px oklch(0% 0 0 / 0.3);
  }

  .headline-accent {
    display: block;
    font-weight: 700;
    color: var(--color-primary);
    position: relative;
  }

  .headline-underline {
    position: absolute;
    width: 100%;
    height: 0.2em;
    bottom: -0.1em;
    left: 0;
    color: var(--color-primary);
    opacity: 0.5;
  }

  /* Subheadline */
  .hero-subheadline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: oklch(85% 0.01 240);
    line-height: 1.6;
    margin: 0 0 2.5rem;
    max-width: 38rem;
    font-weight: 300;
  }

  .subheadline-emphasis {
    display: block;
    color: white;
    font-weight: 500;
    margin-top: 0.25rem;
  }

  @media (min-width: 768px) {
    .subheadline-emphasis {
      display: inline;
      margin-top: 0;
    }
  }

  /* CTA Buttons */
  .hero-cta-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
    max-width: 20rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 480px) {
    .hero-cta-group {
      flex-direction: row;
      justify-content: center;
      max-width: none;
      gap: 1rem;
    }
  }

  .btn-hero-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 9999px;
    background: var(--color-accent);
    color: white;
    font-weight: 700;
    font-size: var(--font-size-lg);
    text-decoration: none;
    box-shadow: 0 10px 30px oklch(65% 0.15 225 / 0.4);
    transition: all 0.3s ease;
  }

  .btn-hero-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px oklch(65% 0.15 225 / 0.6);
  }

  .btn-hero-primary svg {
    transition: transform 0.3s ease;
  }

  .btn-hero-primary:hover svg {
    transform: translateX(4px);
  }

  .btn-hero-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 9999px;
    background: oklch(100% 0 0 / 0.1);
    color: white;
    font-weight: 600;
    font-size: var(--font-size-base);
    text-decoration: none;
    border: 2px solid oklch(100% 0 0 / 0.3);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  @media (min-width: 480px) {
    .btn-hero-secondary {
      padding: 1rem 2rem;
      font-size: var(--font-size-lg);
      gap: 0.75rem;
    }
  }

  .btn-hero-secondary:hover {
    background: white;
    color: var(--color-text);
    border-color: white;
  }

  /* Trust Badges */
  .hero-badges {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .trust-badge-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: oklch(100% 0 0 / 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid oklch(100% 0 0 / 0.1);
    border-radius: var(--radius-lg);
  }

  .badge-icon {
    width: 1.5rem;
    height: 1.5rem;
    padding: 0.25rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .badge-icon svg {
    width: 0.75rem;
    height: 0.75rem;
  }

  .badge-icon-google {
    background: oklch(75% 0.15 85); /* Gold */
    color: white;
  }

  .badge-icon-verified {
    background: oklch(85% 0.18 85); /* Yellow */
    color: oklch(20% 0.02 85);
  }

  .badge-text {
    display: flex;
    flex-direction: column;
    text-align: left;
    line-height: 1;
  }

  .badge-label {
    font-size: 0.625rem;
    color: oklch(75% 0.01 240);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-value {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: white;
  }

  /* Stats Bar */
  .stats-bar-wrapper {
    position: absolute;
    bottom: 2rem;
    left: 1rem;
    right: 1rem;
    z-index: 20;
  }

  .stats-bar {
    max-width: 72rem;
    margin: 0 auto;
    background: oklch(100% 0 0 / 0.92);
    backdrop-filter: blur(20px);
    border-radius: var(--radius-2xl);
    padding: 1.5rem;
    box-shadow: 0 20px 50px oklch(0% 0 0 / 0.3);
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .stats-bar {
      grid-template-columns: repeat(3, 1fr);
      border-radius: 9999px;
      padding: 1.5rem 2rem;
      gap: 0;
    }
  }

  .stat-module {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0.5rem 0;
  }

  @media (min-width: 768px) {
    .stat-module {
      justify-content: flex-start;
      padding: 0.5rem 2rem;
      border-right: 1px solid var(--color-border);
    }

    .stat-module:last-child {
      border-right: none;
    }
  }

  .stat-icon-wrapper {
    padding: 0.75rem;
    background: oklch(95% 0.02 240);
    border-radius: 50%;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .stat-icon-wrapper svg {
    width: 1.75rem;
    height: 1.75rem;
  }

  .stat-text {
    display: flex;
    flex-direction: column;
    text-align: left;
    line-height: 1.2;
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .stat-number {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-family: var(--font-family-heading);
    font-weight: 700;
    color: var(--color-text);
  }

  .stat-unit {
    font-size: var(--font-size-lg);
    font-family: var(--font-family-sans);
    font-weight: 400;
    color: var(--color-text-muted);
  }

  .stat-accent {
    color: var(--color-primary);
  }

  .stat-number-accent {
    color: var(--color-primary);
  }

  .stat-detail {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-glow,
    .badge-dot {
      animation: none;
    }

    .hero-badge {
      animation: none;
    }
  }
</style>
