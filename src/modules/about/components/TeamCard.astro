---
/**
 * TeamCard - Individual team member card
 * Displays dentist info from team collection
 */

import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  member: CollectionEntry<"team">;
}

const { member } = Astro.props;
const { name, role, credentials, shortBio, specialties, education, image } = member.data;
---

<article class="team-card">
  <a href={`/team/${member.data.slug}`} class="team-card-link">
    <div class="card-image">
      {image ? (
        <Image 
          src={image} 
          alt={name} 
          width={400} 
          height={300} 
          class="h-full w-full object-cover"
        />
      ) : (
        <div class="image-placeholder" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </div>
      )}
    </div>

    <div class="card-content">
      <h3 class="member-name">{name}</h3>
      <p class="member-role">{role}</p>

      <div class="credentials">
        {credentials.map((credential) => (
          <span class="credential-badge">{credential}</span>
        ))}
      </div>

      <p class="member-bio">{shortBio}</p>

      {specialties && specialties.length > 0 && (
        <div class="specialties">
          <h4 class="specialties-title">Specialties</h4>
          <ul class="specialties-list">
            {specialties.map((specialty) => (
              <li>{specialty}</li>
            ))}
          </ul>
        </div>
      )}

      {education && education.length > 0 && (
        <div class="education">
          <h4 class="education-title">Education</h4>
          <ul class="education-list">
            {education.map((edu) => (
              <li>
                <span class="edu-degree">{edu.degree}</span>
                <span class="edu-institution">{edu.institution}, {edu.year}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .team-card {
    background: var(--color-surface-elevated);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: box-shadow var(--transition-fast), transform var(--transition-fast);

    &:hover {
      box-shadow: var(--shadow-lg);
      transform: translateY(-4px);
    }
  }

  .team-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  @media (min-width: 640px) {
    .team-card {
      border-radius: var(--radius-xl);
    }
  }

  .card-image {
    /* Square on mobile, 4:3 on larger screens */
    aspect-ratio: 1 / 1;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-secondary-light));
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .card-image {
      aspect-ratio: 4 / 3;
    }
  }

  .image-placeholder {
    width: 64px;
    height: 64px;
    background: var(--color-surface-elevated);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);

    & svg {
      width: 32px;
      height: 32px;
    }
  }

  @media (min-width: 640px) {
    .image-placeholder {
      width: 80px;
      height: 80px;

      & svg {
        width: 48px;
        height: 48px;
      }
    }
  }

  @media (min-width: 1024px) {
    .image-placeholder {
      width: 120px;
      height: 120px;

      & svg {
        width: 64px;
        height: 64px;
      }
    }
  }

  .card-content {
    padding: 0.75rem;
  }

  @media (min-width: 640px) {
    .card-content {
      padding: 1rem;
    }
  }

  @media (min-width: 1024px) {
    .card-content {
      padding: 1.5rem;
    }
  }

  .member-name {
    font-size: var(--font-size-sm);
    margin-bottom: 0.125rem;
    line-height: 1.3;
  }

  @media (min-width: 640px) {
    .member-name {
      font-size: var(--font-size-lg);
      margin-bottom: 0.1875rem;
    }
  }

  @media (min-width: 1024px) {
    .member-name {
      font-size: var(--font-size-2xl);
      margin-bottom: 0.25rem;
    }
  }

  .member-role {
    font-size: var(--font-size-xs);
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
    margin-bottom: 0.5rem;
  }

  @media (min-width: 640px) {
    .member-role {
      font-size: var(--font-size-sm);
      margin-bottom: 0.75rem;
    }
  }

  @media (min-width: 1024px) {
    .member-role {
      font-size: var(--font-size-base);
      margin-bottom: 1rem;
    }
  }

  .credentials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 640px) {
    .credentials {
      gap: 0.375rem;
      margin-bottom: 0.75rem;
    }
  }

  @media (min-width: 1024px) {
    .credentials {
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
  }

  .credential-badge {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    font-size: 0.625rem;
    font-weight: var(--font-weight-medium);
    background: var(--color-primary);
    color: var(--color-text-inverted);
    border-radius: var(--radius-full);
  }

  @media (min-width: 640px) {
    .credential-badge {
      padding: 0.1875rem 0.5rem;
      font-size: var(--font-size-xs);
    }
  }

  @media (min-width: 1024px) {
    .credential-badge {
      padding: 0.25rem 0.75rem;
    }
  }

  .member-bio {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
    margin-bottom: 0.5rem;
    /* Limit lines on mobile */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .member-bio {
      font-size: var(--font-size-sm);
      margin-bottom: 1rem;
      -webkit-line-clamp: 3;
    }
  }

  @media (min-width: 1024px) {
    .member-bio {
      font-size: var(--font-size-base);
      margin-bottom: 1.5rem;
      -webkit-line-clamp: none;
    }
  }

  .specialties,
  .education {
    margin-bottom: 0.5rem;
    /* Hide on mobile to save space */
    display: none;
  }

  @media (min-width: 640px) {
    .specialties,
    .education {
      display: block;
      margin-bottom: 0.75rem;
    }
  }

  @media (min-width: 1024px) {
    .specialties,
    .education {
      margin-bottom: 1rem;
    }
  }

  .specialties-title,
  .education-title {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  @media (min-width: 1024px) {
    .specialties-title,
    .education-title {
      font-size: var(--font-size-sm);
      margin-bottom: 0.5rem;
    }
  }

  .specialties-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      font-size: var(--font-size-xs);
      padding: 0.125rem 0.375rem;
      background: var(--color-surface-sunken);
      border-radius: var(--radius-md);
    }
  }

  @media (min-width: 1024px) {
    .specialties-list {
      gap: 0.5rem;

      li {
        font-size: var(--font-size-sm);
        padding: 0.25rem 0.5rem;
      }
    }
  }

  .education-list {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      display: flex;
      flex-direction: column;
      margin-bottom: 0.25rem;
    }
  }

  @media (min-width: 1024px) {
    .education-list li {
      margin-bottom: 0.5rem;
    }
  }

  .edu-degree {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
  }

  @media (min-width: 1024px) {
    .edu-degree {
      font-size: var(--font-size-sm);
    }
  }

  .edu-institution {
    font-size: 0.625rem;
    color: var(--color-text-muted);
  }

  @media (min-width: 1024px) {
    .edu-institution {
      font-size: var(--font-size-xs);
    }
  }
</style>
