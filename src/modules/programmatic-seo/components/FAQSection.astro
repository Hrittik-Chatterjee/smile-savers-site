---
/**
 * FAQSection - FAQ accordion with Schema.org FAQPage markup
 * Reusable across all programmatic SEO pages
 * Includes structured data for rich snippets
 */

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
  id?: string;
}

const { items, title = "Frequently Asked Questions", id = "faq" } = Astro.props;

// Generate Schema.org FAQPage
const schemaData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map((item) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer,
    },
  })),
};
---

<section class="faq-section" aria-labelledby={`${id}-heading`}>
  <h2 id={`${id}-heading`} class="faq-title">{title}</h2>

  <div class="faq-list">
    {items.map((item) => (
      <details class="faq-item" name={`${id}-accordion`}>
        <summary class="faq-question">
          <span class="question-text">{item.question}</span>
          <span class="faq-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9" />
            </svg>
          </span>
        </summary>
        <div class="faq-answer">
          <p>{item.answer}</p>
        </div>
      </details>
    ))}
  </div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

<style>
  .faq-section {
    max-width: var(--container-md);
    margin-inline: auto;
    padding-block: var(--spacing-block);
  }

  .faq-title {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-element);
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .faq-item {
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: border-color var(--transition-fast);

    &:hover {
      border-color: var(--color-border-strong);
    }

    &[open] {
      border-color: var(--color-primary);
    }
  }

  .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    list-style: none;
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-lg);
    transition: background-color var(--transition-fast);

    &::-webkit-details-marker {
      display: none;
    }

    &:hover {
      background: var(--color-surface-sunken);
    }
  }

  .question-text {
    flex: 1;
  }

  .faq-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: var(--radius-full);
    background: var(--color-surface-sunken);
    color: var(--color-text-muted);
    transition: transform var(--transition-fast), background-color var(--transition-fast);
  }

  details[open] .faq-icon {
    transform: rotate(180deg);
    background: var(--color-primary);
    color: var(--color-text-inverted);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem;
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
  }

  .faq-answer p {
    margin: 0;
  }

  @media (prefers-reduced-motion: no-preference) {
    .faq-answer {
      animation: slideDown var(--transition-normal) ease-out;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-0.5rem);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>
