---
/**
 * PageLayout - Page wrapper with Header and Footer
 * Extends BaseLayout with navigation structure
 */

import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import SkipLink from '@/components/common/SkipLink.astro';
import AccessibilityMenu from '@/modules/accessibility/components/AccessibilityMenu.astro';
import MobileBottomBar from '@/components/layout/MobileBottomBar.astro';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
}

const { title, description, canonicalUrl, ogImage } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl} ogImage={ogImage}>
  <SkipLink />
  <Header />

  <main id="main-content" tabindex="-1">
    <slot />
  </main>

  <Footer />
  
  <!-- White spacer for mobile bottom bar to blend into -->
  <div class="mobile-bottom-spacer"></div>
  
  <MobileBottomBar />
  <AccessibilityMenu />
</BaseLayout>

<style>
  /* White spacer for mobile bottom bar to blend into */
  .mobile-bottom-spacer {
    display: none;
  }

  @media (max-width: 768px) {
    .mobile-bottom-spacer {
      display: block;
      height: 4.25rem; /* 68px - slightly more white space */
      background-color: white;
      /* This creates the white space at the bottom for the bar to blend into */
    }

    :global(footer) {
      /* Minimal padding */
      padding-bottom: 0;
    }
  }

  @media (max-width: 480px) {
    .mobile-bottom-spacer {
      height: 3.75rem; /* 60px on smaller screens */
    }
  }
</style>
