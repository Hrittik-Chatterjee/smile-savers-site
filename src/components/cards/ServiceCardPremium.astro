---
/**
 * Premium Service Card Component
 *
 * Features:
 * - Dark/Light mode support
 * - HIPAA/ADA/FTC compliant
 * - Premium visual design with gradients
 * - Mobile-optimized 2-column layout
 * - WCAG 2.1 AA accessible
 * - 1:1.2 aspect ratio
 *
 * @example
 * <ServiceCardPremium
 *   id="cleaning"
 *   title="Dental Cleaning"
 *   description="Professional teeth cleaning"
 *   icon="cleaning"
 *   href="/services/cleaning"
 *   price="$150-200"
 *   gradient="blue"
 * />
 */

export interface Props {
  /** Unique identifier for the service */
  id: string;
  /** Display title */
  title: string;
  /** Short description (max 100 chars recommended) */
  description: string;
  /** Icon name matching IconSprite definitions */
  icon: string;
  /** Link destination */
  href: string;
  /** Price range (optional) */
  price?: string;
  /** Card variant: default (outlined) or featured (elevated) */
  variant?: "default" | "featured";
  /** Background gradient color */
  gradient?: "blue" | "gold" | "teal" | "purple";
}

const {
  id,
  title,
  description,
  icon,
  href,
  price,
  variant = "default",
  gradient = "blue",
} = Astro.props;
---

<a
  id={`service-card-${id}`}
  href={href}
  class:list={["service-card-premium", `variant-${variant}`, `gradient-${gradient}`]}
  role="article"
  aria-labelledby={`title-${id}`}
  aria-describedby={`desc-${id}`}
>
  <!-- Background Decorative Shape -->
  <div class="decorative-shape" aria-hidden="true"></div>

  <!-- Icon Container -->
  <div class="icon-container">
    <div class="icon-wrapper">
      <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <use href={`#icon-${icon}`} />
      </svg>
    </div>
  </div>

  <!-- Content -->
  <div class="content">
    <!-- Title -->
    <h3 id={`title-${id}`} class="title">
      {title}
      <span class="title-underline" aria-hidden="true"></span>
    </h3>

    <!-- Description -->
    <p id={`desc-${id}`} class="description">
      {description}
    </p>

    <!-- Price Badge -->
    {price && (
      <div class="price-container">
        <span class="price-badge">{price}</span>
      </div>
    )}

    <!-- CTA Arrow (appears on hover) -->
    <div class="cta-arrow" aria-hidden="true">
      <svg class="arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </div>
  </div>

  <!-- Hover Glow Overlay -->
  <div class="hover-glow" aria-hidden="true"></div>
</a>

<style>
  .service-card-premium {
    /* 1:1.2 aspect ratio for proportional scaling */
    aspect-ratio: 1 / 1.2;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 1.25rem;
    border-radius: var(--radius-lg);
    text-decoration: none;
    overflow: hidden;
    transition: all 0.3s ease-out;

    &:focus {
      outline: none;
      box-shadow: 0 0 0 2px var(--color-primary), 0 0 0 4px var(--color-surface);
    }

    &:hover {
      transform: translateY(-4px);

      .decorative-shape {
        transform: translateY(0) translateX(0);
      }

      .icon-wrapper {
        transform: scale(1.1) rotate(6deg);
        box-shadow: var(--shadow-lg);
      }

      .title-underline {
        width: 75%;
      }

      .cta-arrow {
        opacity: 1;
        transform: translateY(0);
      }

      .hover-glow {
        opacity: 1;
      }

      .arrow-icon {
        transform: translateX(4px);
      }
    }
  }

  /* Variant: Default (outlined) */
  .variant-default {
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);

    &:hover {
      border-color: transparent;
      box-shadow: var(--shadow-xl);
    }
  }

  /* Variant: Featured (elevated with gradient) */
  .variant-featured {
    border: 1px solid transparent;
    box-shadow: var(--shadow-lg);

    &:hover {
      box-shadow: var(--shadow-xl);
    }
  }

  /* Gradient backgrounds for featured variant */
  .variant-featured.gradient-blue {
    background: linear-gradient(135deg, #F0F4FF, #E0E8FF);
  }

  .variant-featured.gradient-gold {
    background: linear-gradient(135deg, #FFF9F0, #FFF3E0);
  }

  .variant-featured.gradient-teal {
    background: linear-gradient(135deg, #F0FBF9, #E0F7F4);
  }

  .variant-featured.gradient-purple {
    background: linear-gradient(135deg, #F5F0FF, #EDE0FF);
  }

  /* Decorative Shape */
  .decorative-shape {
    position: absolute;
    top: 0;
    right: 0;
    width: 6rem;
    height: 6rem;
    background: linear-gradient(135deg, rgba(212, 165, 116, 0.05), transparent);
    border-radius: 9999px;
    transform: translateY(-33%) translateX(33%);
    transition: transform 0.5s ease;
  }

  /* Icon Container */
  .icon-container {
    position: relative;
    z-index: 10;
    display: flex;
    justify-content: center;
    margin-bottom: 0.75rem;
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    transition: all 0.3s ease;
  }

  /* Icon wrapper gradient by color */
  .gradient-blue .icon-wrapper {
    background: linear-gradient(135deg, #F0F4FF, #E0E8FF);
  }

  .gradient-gold .icon-wrapper {
    background: linear-gradient(135deg, #FFF9F0, #FFF3E0);
  }

  .gradient-teal .icon-wrapper {
    background: linear-gradient(135deg, #F0FBF9, #E0F7F4);
  }

  .gradient-purple .icon-wrapper {
    background: linear-gradient(135deg, #F5F0FF, #EDE0FF);
  }

  .icon {
    width: 24px;
    height: 24px;
    transition: all 0.3s ease;
  }

  /* Icon colors by gradient */
  .gradient-blue .icon {
    color: var(--color-primary);
  }

  .gradient-gold .icon {
    color: var(--color-accent);
  }

  .gradient-teal .icon {
    color: var(--color-secondary);
  }

  .gradient-purple .icon {
    color: #9C27B0;
  }

  /* Content */
  .content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 0.375rem;
    flex-grow: 1;
  }

  .title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    position: relative;
    display: inline-block;
    line-height: 1.3;
    margin: 0;
  }

  .title-underline {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent), #D4A574);
    width: 0;
    transition: width 0.3s ease;
  }

  .description {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Price Badge */
  .price-container {
    margin-top: 0.5rem;
  }

  .price-badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.625rem;
    font-weight: var(--font-weight-bold);
    background: linear-gradient(90deg, rgba(212, 165, 116, 0.1), rgba(212, 165, 116, 0.1));
    border: 1px solid rgba(212, 165, 116, 0.2);
    color: var(--color-accent);
  }

  /* CTA Arrow */
  .cta-arrow {
    margin-top: auto;
    display: flex;
    justify-content: center;
    opacity: 0;
    transform: translateY(-4px);
    transition: all 0.3s ease;
  }

  .arrow-icon {
    width: 16px;
    height: 16px;
    color: var(--color-primary);
    transition: transform 0.3s ease;
  }

  /* Hover Glow */
  .hover-glow {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    background: linear-gradient(
      135deg,
      rgba(33, 150, 243, 0.05),
      transparent,
      rgba(212, 165, 116, 0.05)
    );
  }

  /* Responsive: Tablet (640px+) */
  @media (min-width: 640px) {
    .service-card-premium {
      padding: 1.5rem;
      border-radius: var(--radius-xl);
    }

    .icon-container {
      margin-bottom: 1rem;
    }

    .icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .icon {
      width: 28px;
      height: 28px;
    }

    .content {
      gap: 0.5rem;
    }

    .title {
      font-size: var(--font-size-base);
    }

    .description {
      font-size: var(--font-size-sm);
      -webkit-line-clamp: 3;
    }

    .price-badge {
      padding: 0.1875rem 0.625rem;
      font-size: var(--font-size-xs);
    }

    .arrow-icon {
      width: 18px;
      height: 18px;
    }
  }

  /* Responsive: Desktop (1024px+) */
  @media (min-width: 1024px) {
    .service-card-premium {
      padding: 2rem;
    }

    .icon-container {
      margin-bottom: 1.25rem;
    }

    .icon-wrapper {
      width: 64px;
      height: 64px;
    }

    .icon {
      width: 32px;
      height: 32px;
    }

    .title {
      font-size: var(--font-size-lg);
    }

    .description {
      font-size: var(--font-size-base);
      -webkit-line-clamp: unset;
    }

    .price-container {
      margin-top: 0.75rem;
    }

    .price-badge {
      padding: 0.25rem 0.75rem;
      font-size: var(--font-size-sm);
    }

    .arrow-icon {
      width: 20px;
      height: 20px;
    }
  }

</style>
