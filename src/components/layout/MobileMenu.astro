---
/**
 * MobileMenu - Professional mobile navigation using DaisyUI Drawer
 * Uses DaisyUI's built-in drawer component for proper sidebar handling
 */

import { mainNavigation } from '@/config/navigation';
import { siteConfig } from '@/config/site';
import { formatPhone, formatPhoneLink } from '@/lib/utils';

const currentPath = Astro.url.pathname;
---

<!-- Hamburger trigger button (outside drawer for proper alignment) -->
<label for="mobile-drawer" class="mobile-menu-btn" aria-label="Open menu">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <line x1="3" y1="6" x2="21" y2="6"></line>
    <line x1="3" y1="12" x2="21" y2="12"></line>
    <line x1="3" y1="18" x2="21" y2="18"></line>
  </svg>
</label>

<!-- DaisyUI Drawer (separate from trigger) -->
<div class="drawer drawer-end">
  <input id="mobile-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content"></div>
  <!-- Sidebar drawer -->
  <div class="drawer-side z-[9999]">
    <label for="mobile-drawer" aria-label="Close menu" class="drawer-overlay"></label>

    <aside class="mobile-drawer-panel">
      <!-- Header with close button -->
      <header class="mobile-drawer-header">
        <span class="mobile-drawer-title">Menu</span>
        <label for="mobile-drawer" class="btn btn-ghost btn-circle" aria-label="Close menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </label>
      </header>

      <!-- Navigation links -->
      <nav class="mobile-drawer-nav">
        <ul class="mobile-nav-list">
          {mainNavigation.map((item) => (
            <li>
              {item.children ? (
                <details class="mobile-nav-details">
                  <summary class:list={['mobile-nav-link', { active: currentPath.startsWith(item.href) }]}>
                    {item.label}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <ul class="mobile-submenu">
                    {item.children.map((child) => (
                      <li>
                        <a
                          href={child.href}
                          class:list={['mobile-submenu-link', { active: currentPath === child.href }]}
                        >
                          {child.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </details>
              ) : (
                <a
                  href={item.href}
                  class:list={['mobile-nav-link', { active: currentPath === item.href }]}
                >
                  {item.label}
                </a>
              )}
            </li>
          ))}
        </ul>
      </nav>

      <!-- CTA buttons -->
      <div class="mobile-drawer-cta">
        <a href="/appointments" class="btn btn-primary w-full gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Book Appointment
        </a>
        <a href={formatPhoneLink(siteConfig.phone)} class="btn btn-outline w-full gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {formatPhone(siteConfig.phone)}
        </a>
      </div>

      <!-- Footer -->
      <footer class="mobile-drawer-footer">
        <div class="flex items-center gap-2 text-sm opacity-70">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Woodside, NY
        </div>
        <span class="text-sm opacity-70">Open Mon-Sat</span>
      </footer>
    </aside>
  </div>
</div>

<style>
  /* Only show on mobile */
  .drawer {
    display: none;
  }

  @media (max-width: 768px) {
    .drawer {
      display: grid;
      position: fixed; /* Removes from flex layout to fix header spacing */
    }
  }

  /* Hamburger button - matches other mobile header icons */
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-muted);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: color var(--transition-fast), background-color var(--transition-fast);

    &:hover {
      color: var(--color-primary);
      background-color: var(--color-surface-sunken);
    }

    &:focus-visible {
      outline: 2px solid var(--color-primary);
      outline-offset: 2px;
    }
  }

  /* Drawer panel styling */
  .mobile-drawer-panel {
    display: flex;
    flex-direction: column;
    width: 70vw;
    max-width: 320px;
    min-height: 100%;
    background-color: var(--color-surface-elevated);
    color: var(--color-text);
  }

  /* Header */
  .mobile-drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-drawer-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  /* Navigation */
  .mobile-drawer-nav {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.875rem 1rem;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    text-decoration: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: background-color 0.2s;

    &:hover {
      background-color: var(--color-surface-sunken);
    }

    &.active {
      color: var(--color-primary);
      background-color: oklch(from var(--color-primary) l c h / 0.1);
    }
  }

  /* Details/Summary for submenus */
  .mobile-nav-details {
    width: 100%;

    &[open] summary svg {
      transform: rotate(180deg);
    }
  }

  .mobile-nav-details summary {
    list-style: none;

    &::-webkit-details-marker {
      display: none;
    }
  }

  .mobile-submenu {
    list-style: none;
    margin: 0.25rem 0 0 0;
    padding: 0 0 0 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .mobile-submenu-link {
    display: block;
    padding: 0.75rem 1rem;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: background-color 0.2s, color 0.2s;

    &:hover {
      background-color: var(--color-surface-sunken);
      color: var(--color-text);
    }

    &.active {
      color: var(--color-primary);
      background-color: oklch(from var(--color-primary) l c h / 0.08);
    }
  }

  /* CTA section */
  .mobile-drawer-cta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    border-top: 1px solid var(--color-border);
  }

  /* Footer */
  .mobile-drawer-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background-color: var(--color-surface-sunken);
  }

  /* Override DaisyUI button colors to use our theme */
  .mobile-drawer-panel .btn-primary {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-text-inverted);

    &:hover {
      background-color: var(--color-primary-dark);
      border-color: var(--color-primary-dark);
    }
  }

  .mobile-drawer-panel .btn-outline {
    border-color: var(--color-border);
    color: var(--color-text);

    &:hover {
      background-color: var(--color-surface-sunken);
      border-color: var(--color-border);
      color: var(--color-text);
    }
  }

  .mobile-drawer-panel .btn-ghost {
    color: var(--color-text);

    &:hover {
      background-color: var(--color-surface-sunken);
    }
  }
</style>