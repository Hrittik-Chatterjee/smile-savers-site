---
/**
 * Footer - Site footer with contact info and links
 */

import { siteConfig } from '@/config/site';
import { footerNavigation } from '@/config/navigation';
import { formatPhone, formatPhoneLink } from '@/lib/utils';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-grid grid-auto" style="--grid-min: 14rem;">
      <!-- Brand & Contact -->
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label={`${siteConfig.name} - Home`}>
          <img
            src="/logo.svg"
            alt={siteConfig.name}
            class="footer-logo-icon"
            width="200"
            height="40"
          />
        </a>

        <p class="footer-description">
          {siteConfig.description.slice(0, 150)}
        </p>

        <address class="footer-contact">
          <a href={formatPhoneLink(siteConfig.phone)} class="contact-link">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            {formatPhone(siteConfig.phone)}
          </a>

          <a
            href={`https://maps.google.com/?q=${encodeURIComponent(`${siteConfig.address.street}, ${siteConfig.address.city}, ${siteConfig.address.state} ${siteConfig.address.zip}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            {siteConfig.address.street}, {siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}
          </a>
        </address>
      </div>

      <!-- Quick Links -->
      <div class="footer-links">
        <h3 class="footer-heading">Quick Links</h3>
        <ul class="footer-list">
          {
            footerNavigation.company.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div class="footer-links">
        <h3 class="footer-heading">Services</h3>
        <ul class="footer-list">
          {
            footerNavigation.services.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Hours -->
      <div class="footer-hours">
        <h3 class="footer-heading">Office Hours</h3>
        <dl class="hours-list">
          {
            siteConfig.hours.map((item) => (
              <div class="hours-item">
                <dt>{item.days.join(', ')}</dt>
                <dd>{item.open === 'Closed' ? 'Closed' : `${item.open} - ${item.close}`}</dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} {siteConfig.name}. All rights reserved.
      </p>
      <nav class="footer-legal" aria-label="Legal links">
        {footerNavigation.legal.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </nav>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-surface-sunken);
    color: var(--color-text);
    padding-block: var(--spacing-section) var(--spacing-block);
  }

  .footer-container {
    max-width: var(--container-xl);
    margin-inline: auto;
    padding-inline: var(--spacing-element);
  }

  .footer-grid {
    /* Grid layout handled by .grid-auto utility class */
    gap: var(--spacing-block);
  }

  .footer-brand {
    grid-column: span 1;
  }

  @media (min-width: 768px) {
    .footer-brand {
      grid-column: span 1;
    }
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
    margin-bottom: 1rem;
  }

  .footer-logo-text {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
  }

  .footer-description {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    font-style: normal;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);

    &:hover {
      color: var(--color-primary);
    }
  }

  .footer-heading {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);

    &:hover {
      color: var(--color-primary);
    }
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    font-size: var(--font-size-sm);

    dt {
      color: var(--color-text-muted);
    }

    dd {
      color: var(--color-text);
      margin: 0;
      text-align: right;
    }
  }

  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-top: var(--spacing-block);
    padding-top: var(--spacing-element);
    border-top: 1px solid var(--color-border);
  }

  .copyright {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;

    a {
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      text-decoration: none;
      transition: color var(--transition-fast);

      &:hover {
        color: var(--color-text);
      }
    }
  }
</style>
