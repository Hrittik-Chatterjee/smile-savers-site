---
/**
 * Header - Site header with logo and navigation
 * Sticky positioning with backdrop blur
 * Mobile: social icons + hamburger menu
 */

import Navigation from './Navigation.astro';
import MobileMenu from './MobileMenu.astro';
import ThemeToggle from '@/components/ui/ThemeToggle.astro';
import { siteConfig } from '@/config/site';
import { ctaButton } from '@/config/navigation';
import { formatPhoneLink } from '@/lib/utils';
---

<header class="site-header">
  <div class="header-container">
    <!-- Logo -->
    <a href="/" class="logo" aria-label="{siteConfig.name} - Home">
      <svg
        class="logo-icon"
        width="40"
        height="40"
        viewBox="0 0 40 40"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <circle cx="20" cy="20" r="18" fill="var(--color-primary)"></circle>
        <path
          d="M12 22C12 22 14 28 20 28C26 28 28 22 28 22"
          stroke="white"
          stroke-width="2.5"
          stroke-linecap="round"></path>
        <circle cx="14" cy="16" r="2" fill="white"></circle>
        <circle cx="26" cy="16" r="2" fill="white"></circle>
      </svg>
      <span class="logo-text">
        <span class="logo-name">{siteConfig.name.split(' ').slice(0, 2).join(' ')}</span>
        <span class="logo-tagline">{siteConfig.tagline.split(' ').slice(0, 2).join(' ')}</span>
      </span>
    </a>

    <!-- Desktop Navigation -->
    <Navigation />

    <!-- Desktop Actions -->
    <div class="desktop-actions">
      <ThemeToggle />
      <a href={ctaButton.href} class="btn btn-primary header-cta">
        {ctaButton.label}
      </a>
    </div>

    <!-- Mobile Actions (Social + Call + Menu) -->
    <div class="mobile-actions">
      {siteConfig.social.facebook && (
        <a
          href={siteConfig.social.facebook}
          class="mobile-social-link"
          aria-label="Visit us on Facebook"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      )}
      {siteConfig.social.instagram && siteConfig.social.instagram !== '#' && (
        <a
          href={siteConfig.social.instagram}
          class="mobile-social-link"
          aria-label="Follow us on Instagram"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      )}
      <a
        href={formatPhoneLink(siteConfig.phone)}
        class="mobile-social-link mobile-call-link"
        aria-label="Call us"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
      </a>
      <!-- Theme Toggle -->
      <ThemeToggle class="mobile-theme-toggle" />
      <!-- Mobile Menu -->
      <MobileMenu />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    background-color: oklch(from var(--color-surface-elevated) l c h / 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  /* Desktop Actions */
  .desktop-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    max-width: var(--container-xl);
    margin-inline: auto;
    padding: 0.75rem var(--spacing-element);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;

    &:hover {
      opacity: 0.9;
    }

    &:focus-visible {
      outline: 2px solid var(--color-primary);
      outline-offset: 4px;
      border-radius: var(--radius-sm);
    }
  }

  .logo-icon {
    flex-shrink: 0;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }

  .logo-name {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
  }

  .logo-tagline {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  .header-cta {
    flex-shrink: 0;
  }

  /* Mobile Actions */
  .mobile-actions {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  .mobile-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-muted);
    border-radius: var(--radius-md);
    transition: color var(--transition-fast), background-color var(--transition-fast);

    &:hover {
      color: var(--color-primary);
      background-color: var(--color-surface-sunken);
    }

    &:focus-visible {
      outline: 2px solid var(--color-primary);
      outline-offset: 2px;
    }
  }

  .mobile-call-link {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .desktop-actions {
      display: none;
    }

    .logo-tagline {
      display: none;
    }

    .mobile-actions {
      display: flex;
    }
  }

  .mobile-theme-toggle {
    width: 40px;
    height: 40px;
  }
</style>
