---
/**
 * About Page
 * Clinic story, values, and team information
 */

import PageLayout from "@/layouts/PageLayout.astro";
import ClinicStory from "@/modules/about/components/ClinicStory.astro";
import ValuesList from "@/modules/about/components/ValuesList.astro";
import TeamGrid from "@/modules/about/components/TeamGrid.astro";
import Button from "@/components/ui/Button.astro";

const title = "About Us";
const description =
  "Learn about Smile Savers, our experienced dental team, and our commitment to providing exceptional care to the Woodside community since 1987.";
---

<PageLayout title={title} description={description}>
  <main id="main-content">
    <!-- Page Header -->
    <section class="page-header">
      <div class="header-container">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <ol>
            <li><a href="/">Home</a></li>
            <li aria-current="page">About</li>
          </ol>
        </nav>
        <h1 class="page-title">About Smile Savers</h1>
        <p class="page-description">
          Creating smiles and building lasting relationships with our patients
          since 1987.
        </p>
      </div>
    </section>

    <!-- Clinic Story -->
    <ClinicStory />

    <!-- Values -->
    <ValuesList />

    <!-- Team -->
    <TeamGrid />

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-container">
        <h2 class="cta-title">Ready to Experience the Difference?</h2>
        <p class="cta-description">
          Schedule your visit and discover why families throughout Queens trust
          Smile Savers for their dental care.
        </p>
        <div class="cta-buttons">
          <Button href="/appointments" variant="primary">
            Book Appointment
          </Button>
          <Button href="/contact" variant="outline">Contact Us</Button>
        </div>
      </div>
    </section>
  </main>
</PageLayout>

<style>
  /* Page Header */
  .page-header {
    background: linear-gradient(
      135deg,
      var(--color-primary-light),
      var(--color-secondary-light)
    );
    padding-block: var(--spacing-section);
  }

  .header-container {
    max-width: var(--container-xl);
    margin-inline: auto;
    padding-inline: var(--spacing-element);
    text-align: center;
  }

  .breadcrumb {
    margin-bottom: 1.5rem;
  }

  .breadcrumb ol {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: var(--font-size-sm);
  }

  .breadcrumb li {
    display: flex;
    align-items: center;
    gap: 0.5rem;

    &:not(:last-child)::after {
      content: "/";
      color: var(--color-text-muted);
    }
  }

  .breadcrumb a {
    color: var(--color-text-muted);
    text-decoration: none;

    &:hover {
      color: var(--color-primary-dark);
      text-decoration: underline;
    }
  }

  .breadcrumb [aria-current="page"] {
    color: var(--color-text);
    font-weight: var(--font-weight-medium);
  }

  .page-title {
    font-size: var(--font-size-5xl);
    margin-bottom: 1rem;
    color: var(--color-primary-dark);
  }

  .page-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    max-width: 600px;
    margin-inline: auto;
    line-height: var(--line-height-relaxed);
  }

  /* CTA Section */
  .cta-section {
    background: var(--color-primary-dark);
    color: var(--color-text-inverted);
    padding-block: var(--spacing-section);
    text-align: center;
  }

  .cta-container {
    max-width: 600px;
    margin-inline: auto;
    padding-inline: var(--spacing-element);
  }

  .cta-title {
    font-size: var(--font-size-3xl);
    margin-bottom: 1rem;
    color: var(--color-text-inverted);
  }

  .cta-description {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: var(--line-height-relaxed);
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
</style>
